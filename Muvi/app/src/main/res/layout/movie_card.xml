<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MovieCard_LinearLayout_ParentLayout"
    android:layout_width="wrap_content"
    android:layout_height="270dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/MovieCard_CardView_CeldaPelicula"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:paddingBottom="10dp"
        app:cardElevation="6dp"
        >

        <RelativeLayout
            android:id="@+id/MovieCard_RelativeLayout_Fase3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrincipal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/MovieCard_ImageView_ImagenPelicula"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/MovieCard_TextView_TituloPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/MovieCard_ImageView_ImagenPelicula"
                android:paddingTop="8dp"
                android:textColor="@color/colorTexto"
                android:textStyle="bold"
                tools:text="Titulo Pelicula" />

            <TextView
                android:id="@+id/MovieCard_TextView_RatingPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/MovieCard_TextView_TituloPelicula"
                android:drawableStart="@drawable/ic_star_black_24dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:textColor="@color/colorTexto"
                tools:text="0.0" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>